<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/blue"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:padding="@dimen/dp_2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@drawable/logo" />

        </LinearLayout>

        <com.zhongbenshuo.zbspepper.design.speechbar.SpeechBarView
            android:id="@+id/speech_bar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_toStartOf="@+id/input" />

        <ImageView
            android:id="@+id/input"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_circle_blue"
            android:contentDescription="@null"
            android:padding="@dimen/dp_10"
            android:src="@drawable/im_speech_voice" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="yyyy年MM月dd日"
                android:format24Hour="yyyy年MM月dd日"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="EEEE  HH:mm:ss"
                android:format24Hour="EEEE  HH:mm:ss"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/gray_1" />

        <com.zhongbenshuo.zbspepper.widget.NoScrollViewPager
            android:id="@+id/viewpager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:layout_weight="1"
            android:overScrollMode="never" />

    </LinearLayout>


</LinearLayout>